        fetch('/chatme',{
          method:'POST',
          headers:{
            "csrf-token":token,
            "Content-Type":'application/json'
          },
          body:JSON.stringify({
            receiver: cid,
            message:message,
            time: time,
          })
        })
        .then(res=>res.json())
        .then(res=>{
          if(res.code!==200){
            return
          }
          const spans = $('.u2.chat');
        spans[spans.length - 1].childNodes[1].childNodes[1].childNodes[0].textContent = 'done_all'
        })
        chatWindow.scrollTop = chatWindow.scrollHeight
      })
